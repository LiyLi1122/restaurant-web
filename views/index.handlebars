<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <!--若 keyword 無資料則為'' -> ? 待確認-->
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- {{#if restaurant_list}} --}}
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    
      
    {{#each restaurantList}}
    <div class="col-md-3 mx-auto mb-4">
      <div class="card-columns">
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-2">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.id}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge text-bg-info font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
          <div class="text-end">
            <a href="/restaurants/{{this._id}}" class="card-link">detail</a>
            <a href="/restaurants/{{this._id}}/edit" class="card-link">edit</a>
            {{!-- <button class="btn delete-btn" >delete</button> --}}
            <form action="/restaurants/{{this._id}}/delete?_method=DELETE" method="POST" style="display: inline" id="form-delete">
              <button type="submit" class="btn btn-danger delete-btn">delete</button>
            </form>
          </div>
        </a>
      </div>
    </div>
    {{/each}}

  </div>
</div>

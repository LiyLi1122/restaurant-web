{{!-- create restaurant --}}
<div class="container mt-5 mb-5">
  <span class="h3">新增餐廳</span>
  <form class="row g-3 needs-validation" action="/restaurants/create" method="POST" novalidate enctype='multipart/form-data'>
    <div class="col-md-6">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" required>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Name is required.
      </div>
    </div>

    <div class="col-md-6">
      <label for="name_en" class="form-label">English name</label>
      <input type="text" class="form-control" id="name_en" name="name_en" required>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        English name is required.
      </div>
    </div>

    <div class="col-12">
      <label for="address" class="form-label">Address</label>
      <input type="text" class="form-control" id="address" name="address" required>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Address is required.
      </div>
    </div>

    <div class="col-md-6">
      <label for="phone" class="form-label">Phone</label>
      <input type="text" class="form-control" id="phone" name="phone" required>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Phone is required.
      </div>
    </div>

    <div class="col-md-6">
      <label for="google_map" class="form-label">Location link on google map</label>
      <input type="text" class="form-control" id="google_map" name="google_map" required>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Link is required.
      </div>
    </div>

    <div class="col-md-6">
      <label for="rating" class="form-label">Rating</label>
      <input type="text" class="form-control" id="rating" name="rating" required>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Rate is required.
      </div>
    </div>

    <div class="col-6">
      <label for="category" class="form-label">Category</label>
      <select class="form-select" id="validationCustom04" name="category" required>
        <option selected disabled value="">選擇</option>
        <option value="0">中東料理</option>
        <option value="1">日本料理</option>
        <option value="2">義式餐廳</option>
        <option value="3">美式</option>
        <option value="4">酒吧</option>
        <option value="5">咖啡</option>
      </select>
      <div class="invalid-feedback">
        Category is required.
      </div>
    </div>

    <div class="col-md-12">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" placeholder="Leave a description here" id="Description" style="height: 200px"
        name="description" required></textarea>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Description is required.
      </div>
    </div>

    <div class="col-12">
      <label for="image" class="form-label">Image</label>
      <span>( 上傳檔案不超過 10 MB )</span>
      <input type="file" class="form-control" id="image" name="image" required>
      <div class="invalid-feedback">
        Image is required.
      </div>
    </div>

    <div class="col-12 text-end">
      <button class="btn btn-primary" type="submit">Create restaurant</button>
    </div>
  </form>

</div>

<div class="container mt-5">
  <form action="/restaurants/{{ restaurant._id }}/edit?_method=PATCH" method="POST">
    name<input type="text" name="name" value="{{restaurant.name}}"><br>
    name_en<input type="text" name="name_en" value="{{restaurant.name_en}}"><br>
    category<input type="text" name="category" value="{{restaurant.category}}"><br>
    image<input type="text" name="image" value="{{restaurant.image}}"><br>
    location<input type="text" name="location" value="{{restaurant.location}}"><br>
    phone<input type="text" name="phone" value="{{restaurant.phone}}"><br>
    google_map<input type="text" name="google_map" value="{{restaurant.google_map}}"><br>
    rating<input type="text" name="rating" value="{{restaurant.rating}}"><br>
    description<textarea name="description" cols="30" rows="10" >{{restaurant.description}}</textarea>
    <button type="submit">Save</button>
  </form>
</div>




